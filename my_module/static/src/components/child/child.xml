<?xml version="1.0" encoding="UTF-8"?>

<templates>
    <t t-name="my_module.Child" owl="1">
        <t t-slot="default" />
        <p>
            <t t-out="props.title" />
            <!-- we define usestate-hook in js file line #14-->
            <!-- <h1>Counter: <t t-out="state.counter" /></h1>  -->
            <!-- now we increament this counter value through props so we move line 14 from child to
            its parent example.js file -->
            <h1>Counter: <t t-out="props.counter" /></h1>
        </p>
        <ol>
            <t t-foreach="props.list" t-as="item" t-key="item_index">
                <li t-out="item" />
            </t>
        </ol>
        <button class="btn btn-primary m-5" t-on-click="focusMyInput"> Focus Input</button>
        <input class="form-input input m-5" t-ref="my-input"></input>
    </t>
</templates>